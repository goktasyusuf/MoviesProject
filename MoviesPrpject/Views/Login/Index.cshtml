
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<br /><br />

<div class="sign section--bg" data-bg="img/section/section.jpg">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="sign__content">
						<!-- authorization form -->
						
						<form method="post" class="sign__form">
							<a href="/Movie/Index" class="sign__logo">
								<img src="~/Theme2/img/logo.svg" alt="">
							</a>

							<div class="sign__group">
								<input type="text" class="sign__input" name="WriterMail" placeholder="Email">
							</div>

							<div class="sign__group">
								<input type="password" class="sign__input" name="WriterPassword" placeholder="Şifre">
							</div>

							<div class="sign__group sign__group--checkbox">
								<input id="remember" name="remember" type="checkbox" checked="checked">
								<label for="remember">Remember Me</label>
							</div>

							<button class="sign__btn" type="submit">Giriş Yap!</button>

							<span class="sign__text">Don't have an account? <a href="/Register/Index">Kayıt Ol!</a></span>

							<span class="sign__text"><a href="#">Şifreni Mi Unuttun ? </a></span>
						</form>
						<!-- end authorization form -->
					</div>
				</div>
			</div>
		</div>
	</div>

