@using Core.Utilites.Results
@using Entity.Concrete


@model IDataResult<List<Comment>>



<div class="col-12">
									<div class="comments">
										<ul class="comments__list">


			@if (Model.Data.Count > 0)
			{
				@foreach (var item in Model.Data)
				{
																					<li class="comments__item">
																					<div class="comments__autor">
																						<img class="comments__avatar" src="~/Theme2/img/user.png" alt="">
																						<span class="comments__name">@item.CommentUserName</span>
																						<span class="comments__time">@item.CommentDate</span>
																					</div>
																					<p class="comments__text">@item.CommentContent</p>
																					<div class="comments__actions">
																						<div class="comments__rate">
																							<button type="button"><i class="icon ion-md-thumbs-up"></i>12</button>

																							<button type="button">7<i class="icon ion-md-thumbs-down"></i></button>
																						</div>

																						<button type="button"><i class="icon ion-ios-share-alt"></i>Reply</button>
																						<button type="button"><i class="icon ion-ios-quote"></i>Quote</button>
																					</div>
																				</li>
				}
			}
			else
			{

													<li class="comments__item">
														<p class="comments__text">Henüz yorum yapılmamış.Yorum yapan ilk kişi siz olun! </p>
													</li>

			}




										</ul>


									</div>
								</div>