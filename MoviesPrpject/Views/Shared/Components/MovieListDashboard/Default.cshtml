@using Core.Utilites.Results
@using Entity.Concrete

@model IDataResult<List<Movie>>
<div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Filmleriniz</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> Başlık </th>
                            <th> Kategori </th>
                            <th> Tarih </th>
                            <th>Detaylar</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                          <tr>
                            <td>
                              <img src="@item.MovieImage" class="mr-2" alt="image"> 
                              </td>
                              <td>
                                  @item.MovieName
                            </td>
                            <td>
                              <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                            </td>
                            <td>@item.MovieCreateDate</td>
                            <td><a class="btn btn-dark" href="/Movie/MovieDetails/@item.MovieId">Detaylar</a></td>
                          </tr>
                            }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
